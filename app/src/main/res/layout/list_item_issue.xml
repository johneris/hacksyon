<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/issueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/spacing_small"
            android:text="PASS FREEDOM OF INFORMATION BILL?"
            android:textSize="24sp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/spacing_small"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/resultContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/primary"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_small">

        <FrameLayout
            android:layout_width="32dp"
            android:layout_height="32dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/candidateBackgroundImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@color/primary"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/candidateImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                tools:src="@drawable/ic_candidate_santiago"/>

        </FrameLayout>

        <TextView
            android:id="@+id/quoteTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_small"
            android:layout_weight="1"
            android:text="'asdfasdfasdfasdfasdf'"
            android:textColor="@color/white"
            android:textSize="12sp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>